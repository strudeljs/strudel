{
  "root": true,
  "parser": "babel-eslint",
  "extends": "airbnb/base",
  "env": {
    "browser": true,
    "mocha": true,
    "jasmine": true,
    "node": true
  },
  "rules": {
    "max-len": [
      1,
      120
    ],
    "arrow-body-style": [
      2,
      "always"
    ],
    "no-return-assign": 0,
    "no-param-reassign": 0,
    "class-methods-use-this": 0,
    "no-underscore-dangle": 0,
    "comma-dangle": [
      2,
      "never"
    ],
    "arrow-parens": [
      2,
      "always"
    ],
    "import/no-extraneous-dependencies": [
      "error", {"devDependencies": ["build/*", "test/**/*"]}
    ]
  }
}
